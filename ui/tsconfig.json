{
  "extends": [
    "@tsconfig/node-lts/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2023"],
    "moduleResolution": "Bundler",
    "noEmit": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true
  }
}
